<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FireBaseOptionsActivity">

        <Button
            android:id="@+id/btnFBAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firebase Authentication"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnFBAuthWithGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Authentication"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFBAuth"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnFBAuthWithFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook Authentication"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFBAuthWithGoogle"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnFBRealTimeDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firebase RealTime Database"
            app:layout_constraintTop_toBottomOf="@+id/btnFBAuthWithFacebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnFBFireStoreDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firebase Fire Store Database"
            app:layout_constraintTop_toBottomOf="@+id/btnFBRealTimeDataBase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnFCM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firebase Cloud Messaging"
            app:layout_constraintTop_toBottomOf="@+id/btnFBFireStoreDataBase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>